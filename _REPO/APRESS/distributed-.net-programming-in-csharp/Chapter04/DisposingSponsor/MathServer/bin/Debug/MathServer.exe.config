<configuration>
  <system.runtime.remoting>
    <application>
    
      <!-- Configure the lease all client activated objects in the app. -->
      <lifetime leaseTime="10s" renewOnCallTime="5s"
                sponsorshipTimeout="5s" leaseManagerPollTime="10s"/>
      
      <service>
        <!-- Register Customer class as client activated -->
        <activated type="MathLibrary.Customer, MathLibrary" />     
      </service>
 
      <channels>
        <channel port="13101" ref="http" />
      </channels>
    </application>
  </system.runtime.remoting>
</configuration>
